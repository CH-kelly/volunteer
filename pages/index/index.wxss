.swiper{
  width: 100vw;
  height: 340rpx;
}
.swiper image{
  width: 660rpx;
  height: 340rpx;
  border-radius: 40rpx;
}
.flex{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.scroll-view{
  display: flex;
  justify-content: space-between;
}
.center{
  margin: 40rpx 30rpx;
}
.line{
  width:4rpx;
  height:32rpx;
  background:rgba(246,39,68,1);
  margin-right: 10rpx;
  position: relative;
  top: 3rpx;
}
.header text{
  font-size:34rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(0,0,0,1);
}
.right>image{
  width: 25rpx;
  height: 25rpx;
  margin-left: 10rpx;
  position: relative;
  top: 2rpx;
}
.right>text{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(246,39,68,1);
}

/* 志愿者样式 */

.lists{
  display: flex;
  justify-content: space-between;
  /* padding: 30rpx; */
  flex-wrap: wrap;
}
.item{
  width: 46%;
  background: #ffffff;
  border-radius:30rpx;
  /* box-shadow:0px 6rpx 10rpx 0px #D3D3D3; */
  overflow: hidden;
  margin: 20rpx 0px;
}
.item-image{
  height:240rpx;
  width: 100%;
}
.desc{
  padding: 20rpx;
}
.title{
font-size:30rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(0,0,0,1);
    text-align: left;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.title2{
  margin-top: 20rpx;

  display: flex;
  align-items: center;
  justify-content: space-between;
}
.date{
  
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}

.desc-icon{
  width:21rpx;
  height:21rpx;
  border-radius:50%;
}
/* 志愿者样式end */

/* 场馆预约样式 */

.venue{
  margin-top: 40rpx;
}
.venue-item{
  margin-top: 20rpx;
  margin-right: 30rpx;
  flex-shrink:0;
  width: 600rpx;
  /* box-shadow:0px 6rpx 10rpx 0px #D3D3D3; */
  background: #ffffff;
  border-radius:30rpx;
  overflow: hidden;
}
.venue-lists text{
font-size:34rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(0,0,0,1);
}
.venue-image{
  width: 600rpx;
  height: 360rpx;
}
.venue-desc{
  padding:30rpx;
  /* width:600rpx; */
  /* height:140rpx; */
  background:rgba(255,255,255,1);
}
.address{
  width: 17rpx;
  height: 22rpx;
}
.venue-address{
  margin-top: 30rpx;
  justify-content: flex-start;
}
.venue-address>text{
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.venue-button{
  width:160rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(245,42,70,1);
  border-radius:20rpx;
  
  font-size:34rpx;
  font-weight:bold;
  color:rgba(246,39,68,1);
}
/* 场馆预约结束 */

/* 往期活动 */
.activity{
  margin-top: 40rpx;
}
.activity-center{
  margin-top: 20rpx;
}
.activity-image{
  width:690rpx;
  height:320rpx;
}
.activity-item{
  margin-top: 30rpx;
  background: #ffffff;
  border-radius: 30rpx;
  overflow: hidden;
}
.activity-item>.title{
  padding: 20rpx 30rpx;
}
.activity-desc{
  padding:0 30rpx 20rpx 30rpx;
}