.background{
  height: 100vh;
}

.lists{
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  flex-wrap: wrap;

}
.item{
  width: 48%;
  background: #ffffff;
  border-radius:30rpx;
  box-shadow:0px 6rpx 10rpx 0px #D3D3D3;
  overflow: hidden;
  margin: 20rpx 0px;
}
.item-image{
  height:240rpx;
  width: 100%;
}
.desc{
  padding: 20rpx;
}
.title{
font-size:30rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(0,0,0,1);

    text-align: left;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;


}
.title2{
  margin-top: 20rpx;

  display: flex;
  align-items: center;
  justify-content: space-between;
}
.date{
  
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}

.desc-icon{
  width:21rpx;
  height:21rpx;
  border-radius:50%;
}

/* 右侧悬浮按钮 */
.FloatFrame{
  /* width:229rpx; */
  height:80rpx;
  background:rgba(254,198,122,1);
  border-radius:40rpx 0px 0px 40rpx;
  display: flex;
  align-items: center;

  position: fixed;
  bottom: 60rpx;
  right: 0;

}
.float-left{
  width:80rpx;
  height:80rpx;
  background:rgba(254,198,122,1);
  border:2rpx solid rgba(255,255,255,1);
  border-radius:50%;

  display: flex;
  align-items: center;
  justify-content: center;

}
.float-icon{
  width:40rpx;
  height:40rpx; 
  box-shadow:0px 6px 21px 0px rgba(224,111,20,0.68);
}
.float-right{
  width:150rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  /* font-weight:bold; */
  color:rgba(255,255,255,1);
  margin-left: 10rpx;
}
