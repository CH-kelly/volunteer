.detail-info{
  font-family:PingFang SC;
  color:rgba(0,0,0,1);
  }
  .swiper{
    width: 100vw;
    height: 440rpx;
  }
  .swiper image{
    width: 100%;
    height: 100%;
  }
  .detail{
    padding: 30rpx;
    /* background-color: skyblue; */
  
    font-family:PingFang SC;
    font-weight:bold;
    color:rgba(0,0,0,1);
  }
  .title{
    font-size:34rpx;
  }
  .detail-address{
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    /* display: flex;
    align-items: center; */
  }
  .address{
    width:17rpx;
    height:22rpx;
    margin-right: 10rpx;
  }
  .item-address{
    margin-top: 10rpx;
    font-size:24rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(102,102,102,1);

    display: flex;
    align-items: center;
  }
  .item-address>text{
    font-size: 28rpx;
    color:rgba(0,0,0,1);
    font-weight:500;
  }
    .line{
      height: 2rpx;
      background-color: #E8E8E8;
    }
  .number-people{
    margin: 20rpx 0;
  }
  .number-people>.demand{
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .sign-in{
    margin-top: 40rpx;
    padding: 30rpx;
    background:rgba(255,255,255,1);
    border:1rpx solid rgba(232,232,232,1);
    border-radius:30rpx;
  }
  .sign-left{
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .sign-title{
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(0,0,0,1);
  }
  .sign-time{
    margin-top: 20rpx;
    font-size:26rpx;
    color:rgba(245,41,69,1);
  }
  .sign-button{
    width:160rpx;
    height:76rpx;
    line-height: 76rpx;
    text-align: center;
    background:#FEC67A;
    border-radius:20rpx;
    box-shadow: 0px 10rpx 20rpx 0px #FEC67A;
    color: #ffffff;

    
    font-size:34rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);

  }
  .is-signed{
    line-height: 24rpx;
    border:1px solid rgba(254,198,122,1);
    color:rgba(254,198,122,1);
    background: #ffffff;
    font-size:24rpx;
    box-shadow: none;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
  }
  .sign-line{
    margin: 20rpx 0 ;
  }
  .sing-exit{
    background:rgba(153,153,153,1);
    box-shadow: none
  }
    .title-h1{
      margin-top: 30rpx;
      display: flex;
      align-items: center;
    }
  .detail-line{
    width:4rpx;
    height:34rpx;
    background:rgba(245,42,70,1);
    border-radius: 4rpx;
    margin-right: 20rpx;
    position: relative;
    top: 4rpx;
  }
    .detail-text{
    font-size:34rpx;
    font-family:PingFang SC;
    font-weight:bold;
    color:rgba(0,0,0,1);
    }
    .content{
      margin-top: 30rpx;
      font-size:28rpx;
      font-weight:500;
    }
    .content-image{
      margin: 36rpx 0;
    }
    .content-image>image{
      width: 100%;
    }
    .scroll-view{
      height: calc(100vh - 80px);
    }
    .button{
      height: 80px;
      /* margin: 16rpx 0; */
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
  
      position: fixed;
      bottom: 0px;
      background: #ffffff;
      /* bottom: 16rpx; */
  
    }
    .appointment{
      width:690rpx;
      height:88rpx;
      background:rgba(254,198,122,1);
      border-radius:30rpx;
  
      font-size:34rpx;
      font-weight:bold;
      text-align: center;
      line-height: 88rpx;
    }