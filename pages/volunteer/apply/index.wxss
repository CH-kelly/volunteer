.background {
  height: 100vh;
  background: #EEEEEE
}

.from {
  background: #ffffff;
}

.item {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  display: flex;
  align-items: center;
  justify-content: space-between;

  padding: 35rpx 30rpx;
  border-top: 1px solid #EEEEEE;
}
.item-radio{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.item-radio .sex{
  margin-left: 120rpx;
  display: flex;
  align-items: center;
}
.item-radio  image{
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.item>text {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.weui-input {
  width: 70%;
  text-align: right;
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
}

.picker {
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.picker>image{
  width: 20rpx;
  height: 13rpx;
  margin-left: 10rpx;
}

.buttom {
  width: 100%;
  padding: 30rpx;
  position: fixed;
  bottom: 100rpx;
}

.agreement {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.active{
  background-image: url("/static/images/appointment/hook.png");
  background-color: rgba(254, 198, 122, 1) !important;
}

.checkbox {
  width: 30rpx;
  height: 30rpx;
  background: rgba(238, 238, 238, 1);
  border: 1rpx solid rgba(0, 0, 0, 1);
  position: relative;
  top: 2rpx;
  margin-right: 10rpx;
}
.checkbox-icon{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: -3rpx;
  left: -1rpx;

}

.read {

  font-family: PingFang SC;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
}

.important {
  font-weight: Bold;
}

.submit {
  margin-top: 60rpx;
  width: 690rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  background: rgba(254, 198, 122, 1);
  border-radius: 30rpx;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
}