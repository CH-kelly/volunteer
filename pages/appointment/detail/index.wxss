/* pages/appointment/detail/index.wxss */
.detail-info{
font-family:PingFang SC;
color:rgba(0,0,0,1);
}
.swiper{
  width: 100vw;
  height: 440rpx;
}
.swiper image{
  width: 100%;
  height: 100%;
}
.detail{
  padding: 30rpx;
  /* background-color: skyblue; */

  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(0,0,0,1);
}
.title{
  font-size:34rpx;
}
.detail-address{
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}
.address{
  width:17rpx;
  height:22rpx;
  margin-right: 10rpx;
}
.item-address{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  }
  .autograph{
    margin-top: 20rpx;
    display: flex;
    align-items: center;
  }
  .label{
    width:80rpx;
    height:34rpx;
    background:rgba(255,255,255,1);
    border:1px solid rgba(255,141,19,1);
    border-radius:8rpx;
    font-size:24rpx;
    text-align: center;
    line-height: 34rpx;
    margin-right: 20rpx;
    color: rgba(255,141,19,1);
  }
  .line{
    margin-top: 10rpx;
    height: 1rpx;
    background-color: #E8E8E8;
  }


  .title-h1{
    margin-top: 60rpx;
    display: flex;
    align-items: center;
  }
.detail-line{
  width:4rpx;
  height:34rpx;
  background:rgba(245,42,70,1);
  border-radius: 4rpx;
  margin-right: 20rpx;
  position: relative;
  top: 4rpx;
}
  .detail-text{
  font-size:34rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(0,0,0,1);
  }
  .content{
    margin-top: 30rpx;
    font-size:28rpx;
    font-weight:500;
  }
  .content-image{
    margin: 36rpx 0;
  }
  .content-image>image{
    width: 100%;
  }
  .scroll-view{
    height: calc(100vh - 80px);
  }
  .button{
    height: 80px;
    /* margin: 16rpx 0; */
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;

    position: fixed;
    bottom: 0px;
    background: #ffffff;
    /* bottom: 16rpx; */

  }
  .appointment{
    width:690rpx;
    height:88rpx;
    background:rgba(254,198,122,1);
    border-radius:30rpx;

    font-size:34rpx;
    text-align: center;
    line-height: 88rpx;
  }