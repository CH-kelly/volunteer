
.index{
  height: 100vh;
  background-color: #F5F5F5;
}
.from {
  background: #ffffff;
}

.item {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  display: flex;
  align-items: center;
  justify-content: space-between;

  padding: 35rpx 30rpx;
  border-top: 1px solid #EEEEEE;
}

.item>text {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.weui-input {
  height: 100%;
  width: 70%;
  text-align: right;
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
}
.item-radio{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.item-radio .sex{
  margin-left: 120rpx;
  display: flex;
  align-items: center;
}
.item-radio  image{
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}

.buttom {
  width: 100%;
  padding: 30rpx;
  position: fixed;
  bottom: 100rpx;
}
.desc{
  margin: 60rpx 0 25rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
}

.submit {
  margin-top: 60rpx;
  width: 690rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  background: rgba(254, 198, 122, 1);
  border-radius: 30rpx;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
}