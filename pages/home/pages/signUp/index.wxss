
.flex{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.index{
  background: #F7F7F7;
  height: 100vh;
}
.header{
  /* padding: 30rpx; */
  height: 60rpx;
  padding:0 30rpx; 
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  
  background: #ffffff;
  align-items: baseline;

  position: relative;
  z-index: 1;
}
.header>view{
  height: 60rpx;
  /* padding: 0 30rpx; */
}
.scroll-view{
  height: calc(100vh - 60rpx - 20rpx);
}
.active{
  font-size:32rpx;
  font-weight:bold;
  border-bottom: 1px solid #E9363F;
}

.header-lists{
  font-family:PingFang SC;
  font-weight:bold;
}
.item{
  margin-top: 20rpx;
  padding: 30rpx;
  background: #ffffff;
}
.item-left{
  margin-right: 30rpx;
}
.item-left>image{
  width:240rpx;
  height: 240rpx;
  border-radius:30rpx;
}
.audit{
  font-size:28rpx;
  color:rgba(0,57,243,1);
  width:132rpx;
  height:34rpx;
  line-height: 34rpx;
  text-align: center;
  background:rgba(0,57,243,0.5);
  border-radius:10rpx;
  /* padding: 3rpx 10rpx; */
}
.success{
  color: #00C071;
  background:rgba(0,177,91,0.4);
}
.refuse{
  color: #FF1919;
  background:rgba(226,0,0,0.4);
}
.title{
margin: 10rpx 0 58rpx 0;
font-size:34rpx;
color:rgba(0,0,0,1);
}
.start{
font-size:24rpx;
font-weight:500;
color:rgba(102,102,102,1);
}
.timer{
font-size:25rpx;
font-weight:500;
}