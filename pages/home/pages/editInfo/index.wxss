.background {
  height: 100vh;
  background: #EEEEEE
}

.from {
  background: #ffffff;
}

.item {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  display: flex;
  align-items: center;
  justify-content: space-between;

  padding: 35rpx 30rpx;
  border-top: 1px solid #EEEEEE;
}
.item text{
font-family:PingFang SC;
font-weight:bold;
}
.item>text {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}
.item-avatar{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.item-avatar>text{
  color: #C82519;
}
.item-avatar>image{
  margin-left: 10rpx;
  width:80rpx;
  height:80rpx;
  border-radius:50%;
}

.weui-input {
  width: 70%;
  text-align: right;
  font-size: 28rpx;
  color: #000000;
  font-weight:bold;
}
.placeholder-class{
  color: rgba(102, 102, 102, 1);
  font-weight:500;
}

.picker {
  font-size: 28rpx;
  color: #666666;
}
.picker>text{
  color: #000000;
  margin: 0  20rpx;
}
.buttom {
  width: 100%;
  padding: 30rpx;
  position: fixed;
  bottom: 100rpx;
}


.submit {
  margin-top: 60rpx;
  width: 690rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  background: rgba(254, 198, 122, 1);
  border-radius: 30rpx;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
}