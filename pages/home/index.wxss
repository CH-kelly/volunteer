/* pages/home/index.wxss */
.flex-center{
  display: flex;
  align-items: center;
  justify-content: center;
}

.index{
  height: 100vh;
  width: 100vw;
  background-color: #F5F5F5;
}
.info{
  width: 100vw;
  height: 400rpx;
  background:#F52A46;
  color: #ffffff;

  font-size:42rpx;
  font-family:PingFang SC;
  font-weight:bold;
}
.top{
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.top-left{
  width: 70%;
}
.info-address{
  margin-top: 28rpx;
  font-size:24rpx;
}
.top-right{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  border: 1px solid #ffffff;
}


.float-menus{
  position: relative;
  top: 260rpx;
  left: 54%;
  transform: translate(-50%,-50%);
}

.float-menu{
  width:690rpx;
  height:220rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 9rpx 40rpx 0px rgba(157,7,28,0.13);
  border-radius:30rpx;
  margin-bottom: 40rpx;

  /* position: relative;
  top: 0;
  left: 50%;
  transform: translate(-50%,-50%); */


  display: flex;
  align-items: center;
  justify-content: space-between;


}
.float-menu-left{
  width: 50%;
  text-align: center;
}
.float-menu-right{
  width: 50%;
  text-align: center;
}
.float-title{
  font-size:48rpx;
  color:rgba(245,42,70,1);
  line-height:9rpx;
}
.float-desc{
  margin-top: 44rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:9px;
}



.menu-lists{
  /* margin: 30rpx; */
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  width:690rpx;
  background:rgba(255,255,255,1);
  border-radius:30rpx;

}
.menu-lists>text{
font-size:34rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
line-height:9px;
}
.menu-itme{
  padding: 30rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item-icon{
  width: 28rpx;
  height: 33rpx;
  margin-right: 20rpx;

}
.item-right{
  width: 15rpx;
  height: 24rpx;
}